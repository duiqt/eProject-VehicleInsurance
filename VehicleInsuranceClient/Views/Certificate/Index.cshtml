<script>
    $(document).ready(function () {
        var id = $("#userID").val();
        $.ajax({
            url: "@(Program.ApiAddress + "/Certificate/GetCertificates")",
            type: "GET",
            data: {
                id: id,
            },
            success: function (result) {
                GetViewProduct(result);
            }
        });

