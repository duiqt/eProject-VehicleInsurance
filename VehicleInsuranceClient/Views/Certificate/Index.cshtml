    function GetViewProduct(productList) {
        $.ajax({
            url: "/Certificate/GetCertificates",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(productList),
            success: function (dataView) {
                $("#certificates-content").html(dataView);
            }
        });
    }
</script>
