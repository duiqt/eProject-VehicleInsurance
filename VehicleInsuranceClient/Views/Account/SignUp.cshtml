@model VehicleInsuranceClient.Models.Dtos.SignUpDto

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login-section {
        margin-bottom: 200px;
    }

    .card-wrapper {
        margin: 0 250px;
    }

    .login-title {
        font-weight: bold;
        padding-bottom: 5px;
        border-bottom: 2px solid #f8db00;
    }

    .login-input {
        margin: 15px 0;
        border-radius: unset;
        padding: 14px;
        font-size: 14px;
    }

    .register-btn {
        color: #FFFFFF;
        background-color: #454849;
        border: none;
        box-shadow: none;
        padding: 8px 15px;
        border-radius: 4px;
        text-transform: uppercase;
        font-size: 14px;
    }

    .login-btn:hover {
        background-color: #e0c426;
    }

    .register-btn:hover {
        background-color: #000;
    }

    .card-content-body {
        padding: 10px 100px;
    }

</style>

<!-- Section: Design Block -->
<section class="text-center login-section">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background: #1F5AA5;
        height: 300px;
        ">
        <h2 style="color:white">Register New Account</h2>
        <h4 style="color:white">View your products and manage personal details and payments</h4>
    </div>
    <!-- Background image -->

    <div class="card-wrapper shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        /*">
        <div class="card-item py-5 bg-white">

            <div class="row d-flex justify-content-center card-content">
                <div class="col-lg-12 card-content-body">
                    <h2 class="fw-bold mb-2 login-title" style="text-align: left">Register</h2>
                    <h5 class="text-danger" style="color:red">@ViewBag.msg </h5>
                    @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
                    {
                        <form id="SignUpForm" asp-controller="Account" asp-action="SignUp" method="post">
                            @*<form asp-action="SignUp" method="post" class="user-form">*@
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="CustomerEmail" class="form-control login-input" type="text" id="customeremail" name="customeremail" placeholder="Customer Email" />
                                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="CustomerName" class="form-control login-input" type="text" id="CustomerName" name="CustomerName" placeholder="Customer Name" />
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="Password" asp-for="Password" class="form-control login-input" type="Password" name="Password" id="Password" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="CustomerPhone" class="form-control login-input" type="text" id="CustomerPhone" name="CustomerPhone" placeholder="Customer Phone" />
                                <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="CustomerAddress" class="form-control login-input" type="text" id="CustomerAddress" name="CustomerAddress" placeholder="Address Address" />
                                <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="margin-top:10px">
                                <input type="submit" value="Register" class="btn btn-primary register-btn" />
                            </div>

                        </form>
                    }
                    @if (@ViewBag.msg != null)
                    {
                        <script type="text/javascript">
                            window.onload = function () {
                                alert("@ViewBag.msg");
                            };

                        </script>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



