@using VehicleInsuranceClient.Models.Dtos
@model CustomerDto

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login-section {
        margin-bottom: 200px;
    }

    .card-wrapper {
        margin: 0 250px;
    }

    .login-title {
        font-weight: bold;
        padding-bottom: 5px;
        border-bottom: 2px solid #f8db00;
    }

    .login-input {
        margin: 15px 0;
        border-radius: unset;
        padding: 14px;
        font-size: 14px;
    }

    .register-btn {
        color: #FFFFFF;
        background-color: #454849;
        border: none;
        box-shadow: none;
        padding: 8px 15px;
        border-radius: 4px;
        text-transform: uppercase;
        font-size: 14px;
    }

    .login-btn:hover {
        background-color: #e0c426;
    }

    .register-btn:hover {
        background-color: #000;
    }

    .card-content-body {
        padding: 10px 100px;
    }

</style>

<!-- Section: Design Block -->
<section class="text-center login-section">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background: #1F5AA5;
        height: 300px;
        ">
        <h2 style="color:white">Register New Account</h2>
        <h4 style="color:white">View your products and manage personal details and payments</h4>
    </div>
    <!-- Background image -->

    <div class="card-wrapper shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        /*">
        <div class="card-item py-5 bg-white">

            <div class="row d-flex justify-content-center card-content">
                <div class="col-lg-12 card-content-body">
                    <h2 class="fw-bold mb-2 login-title" style="text-align: left">Register</h2>
                    <form asp-action="SignUp">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <input class="form-control login-input" type="text" id="customername" name="customername" placeholder="Customer Name">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <input class="form-control login-input" type="text" id="username" name="username" placeholder="Email/ Member number">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <input class="form-control login-input" type="password" name="password" id="password" placeholder="Password">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <input class="form-control login-input" type="text" id="customeremail" name="customeremail" placeholder="Customer Email">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <input class="form-control login-input" type="text" id="customerphone" name="customerphone" placeholder="Customer Phone">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <input class="form-control login-input" type="text" id="customeraddress" name="customeraddress" placeholder="Customer Address">
                                </div>
                            </div>
                            <div>
                                <span id="errorMessage"></span>
                            </div>
                            <div class="d-flex justify-content-between mt-3">
                                <button class="default-btn register-btn" type="submit" value="SigUp">
                                    Create New Account
                                </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

